@page
@model BatchPortal.Pages.Batches.CreateModel

@{
    ViewData["Title"] = "Create Batch";
}

<h1>Create Batch</h1>

<p class="text-muted">You currently have @Model.ExistingBatchCount batches.</p>

<form method="post" enctype="multipart/form-data" class="mt-4">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="InputFile" class="form-label">Input JSONL File</label>
        <input asp-for="InputFile" class="form-control" type="file" />
        <span asp-validation-for="InputFile" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Endpoint" class="form-label">Endpoint</label>
        <input asp-for="Endpoint" class="form-control" />
        <span asp-validation-for="Endpoint" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CompletionWindowHours" class="form-label">Completion Window (hours)</label>
        <input asp-for="CompletionWindowHours" class="form-control" type="number" min="1" />
        <span asp-validation-for="CompletionWindowHours" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Batch</button>
</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}

