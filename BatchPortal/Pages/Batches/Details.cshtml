@page
@model BatchPortal.Pages.Batches.DetailsModel
@{
    ViewData["Title"] = "Batch Details";
}

<h1>Batch @Model.Batch.Id</h1>

<div class="row mb-4">
    <div class="col-md-6 mb-3">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Batch Summary</h5>
                <p><strong>User:</strong> @Model.Batch.UserId</p>
                <p>
                    <strong>Status:</strong>
                    @await Html.PartialAsync("Components/Ui/StatusBadge", Model.Batch.Status)
                </p>
                <p>
                    <strong>GPU Pool:</strong>
                    @await Html.PartialAsync("Components/Ui/GpuPoolBadge", Model.Batch.GpuPool)
                </p>
                <p>
                    <strong>Created:</strong> @Model.Batch.CreatedAt.Humanize()
                    <small class="text-muted ms-1">(@Model.Batch.CreatedAt.ToLocalTime())</small>
                </p>
                <p>
                    <strong>Started:</strong> @(Model.Batch.StartedAt?.Humanize() ?? "—")
                    @if (Model.Batch.StartedAt.HasValue)
                    {
                        <small class="text-muted ms-1">(@Model.Batch.StartedAt.Value.ToLocalTime())</small>
                    }
                </p>
                <p>
                    <strong>Completed:</strong> @(Model.Batch.CompletedAt?.Humanize() ?? "—")
                    @if (Model.Batch.CompletedAt.HasValue)
                    {
                        <small class="text-muted ms-1">(@Model.Batch.CompletedAt.Value.ToLocalTime())</small>
                    }
                </p>
                <p><strong>Completion window:</strong> @Model.Batch.CompletionWindow</p>
                <p>
                    <strong>SLA Deadline:</strong> @Model.Batch.DeadlineUtc.ToLocalTime()
                    @if (Model.Batch.IsSlaBreached)
                    {
                        <span class="badge bg-danger ms-2">SLA Breached</span>
                    }
                    else if (Model.Batch.CompletedAt.HasValue)
                    {
                        <span class="badge bg-success ms-2">SLA Met</span>
                    }
                    else
                    {
                        <span class="badge bg-warning ms-2">In progress</span>
                    }
                </p>
                @if (!string.IsNullOrEmpty(Model.Batch.ErrorMessage))
                {
                    <p class="text-danger"><strong>Error:</strong> @Model.Batch.ErrorMessage</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Requests Summary</h5>
                <ul class="list-unstyled mb-0">
                    <li><strong>Total:</strong> @Model.Batch.TotalRequests</li>
                    <li class="text-success"><strong>Completed:</strong> @Model.Batch.CompletedRequests</li>
                    <li class="text-danger"><strong>Failed:</strong> @Model.Batch.FailedRequests</li>
                    <li class="text-warning"><strong>Queued:</strong> @Model.Batch.QueuedRequests</li>
                    <li class="text-info"><strong>Running:</strong> @Model.Batch.RunningRequests</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<h2>Output</h2>
@if (!Model.Batch.HasOutputFile)
{
    <p class="text-muted">No output file has been generated for this batch yet.</p>
}
else
{
    <div class="card mb-3">
        <div class="card-body">
            <p class="mb-2">
                <strong>Output file:</strong>
                @Model.Batch.OutputFileId
            </p>
            @if (!string.IsNullOrEmpty(Model.OutputFileDownloadUrl))
            {
                <a href="@Model.OutputFileDownloadUrl" class="btn btn-sm btn-outline-primary" target="_blank" rel="noopener noreferrer">
                    Download output file
                </a>
            }
            @if (Model.Batch.OutputPreviewLines.Any())
            {
                <hr />
                <p class="fw-bold mb-1">Preview (first @Model.Batch.OutputPreviewLines.Count line(s)):</p>
                <pre class="bg-light p-2" style="max-height: 300px; overflow-y: auto;">
@foreach (var line in Model.Batch.OutputPreviewLines)
{
@line
@:
}
                </pre>
                @if (Model.Batch.OutputPreviewTruncated)
                {
                    <p class="text-muted mb-0">
                        Preview truncated – download the file to see the full content.
                    </p>
                }
            }
            else
            {
                <p class="text-muted mb-0">No preview available yet.</p>
            }
        </div>
    </div>
}

<h2>Interruption / Notes</h2>
@if (!Model.Batch.InterruptionNotes.Any())
{
    <p class="text-muted">No interruptions or escalations recorded for this batch.</p>
}
else
{
    <div class="card border-warning mb-4">
        <div class="card-body">
            <ul class="mb-0">
                @foreach (var note in Model.Batch.InterruptionNotes)
                {
                    <li>
                        <span class="badge bg-warning text-dark me-2">Line @note.LineNumber</span>
                        @note.Message
                    </li>
                }
            </ul>
        </div>
    </div>
}

<h2>Requests</h2>
@if (!Model.Batch.Requests.Any())
{
    <p class="text-muted">No requests associated with this batch.</p>
}
else
{
    <div class="table-responsive">
        <table id="request-table" class="table table-sm table-striped align-middle">
            <thead>
                <tr>
                    <th>Line</th>
                    <th>Status</th>
                    <th>Duration</th>
                    <th>GPU Pool</th>
                    <th>Retry Count</th>
                    <th>Completed</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var request in Model.Batch.Requests)
            {
                var collapseId = $"req-{request.Id}";
                <tr>
                    <td class="text-monospace">@request.LineNumber</td>
                    <td>@await Html.PartialAsync("Components/Ui/StatusBadge", request.Status)</td>
                    <td>@request.DurationDisplay</td>
                    <td>
                        @await Html.PartialAsync("Components/Ui/GpuPoolBadge", request.GpuPool)
                        @if (request.WasEscalated)
                        {
                            <span class="badge bg-warning text-dark ms-1">Escalated</span>
                        }
                    </td>
                    <td>@request.RetryCount</td>
                    <td>@(request.CompletedAt?.Humanize() ?? "—")</td>
                    <td>
                        <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                            Details
                        </button>
                    </td>
                </tr>
                <tr>
                    <td colspan="7" class="p-0 border-0">
                        <div id="@collapseId" class="collapse" data-bs-parent="#request-table">
                            <div class="card card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="fw-bold">Input</h6>
                                    <pre class="bg-light p-2">@(!string.IsNullOrWhiteSpace(request.InputPayload) ? request.InputPayload : "-")</pre>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="fw-bold">Output</h6>
                                    <pre class="bg-light p-2">@(!string.IsNullOrWhiteSpace(request.OutputPayload) ? request.OutputPayload : "-")</pre>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="fw-bold">Notes</h6>
                                    <p class="mb-1">@(!string.IsNullOrWhiteSpace(request.Notes) ? request.Notes : "—")</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="fw-bold">Escalation History</h6>
                                    @if (!request.GpuPoolHistory.Any())
                                    {
                                        <p class="text-muted mb-0">No history recorded.</p>
                                    }
                                    else
                                    {
                                        <ul class="mb-0">
                                            @foreach (var history in request.GpuPoolHistory)
                                            {
                                                <li>
                                                    <span class="text-monospace">@history.Pool</span> – @history.Description
                                                    @if (history.OccurredAt.HasValue)
                                                    {
                                                        <span class="text-muted">(@history.OccurredAt.Value.Humanize())</span>
                                                    }
                                                </li>
                                            }
                                        </ul>
                                    }
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

