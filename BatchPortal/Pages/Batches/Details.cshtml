@page
@model BatchPortal.Pages.Batches.DetailsModel
@{
    ViewData["Title"] = "Batch Details";
    var batchIdShort = Model.Batch.Id.ToString().Substring(0, 8);
    ViewData["Breadcrumbs"] = new List<(string, string?)>
    {
        ("Batches", "/Batches"),
        ($"Batch {batchIdShort}", null)
    };
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="d-inline-block mb-0">Batch Details</h1>
        <div class="mt-2">
            <span class="text-muted">ID:</span>
            <code class="monospaced">@Model.Batch.Id</code>
            <button class="btn btn-sm btn-outline-secondary ms-2" onclick="copyToClipboard('@Model.Batch.Id', this)" title="Copy Batch ID">
                <i class="bi bi-clipboard"></i>
            </button>
        </div>
    </div>
    <div class="d-flex align-items-center gap-3">
        <div class="d-flex align-items-center gap-2">
            <span id="last-updated" class="text-muted small" style="display: none;"></span>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="auto-refresh-toggle" 
                       @(Model.Batch.Status == "Queued" || Model.Batch.Status == "Running" ? "" : "disabled")>
                <label class="form-check-label" for="auto-refresh-toggle">
                    <i class="bi bi-arrow-clockwise me-1"></i>Auto-refresh
                </label>
            </div>
        </div>
        <div class="d-flex gap-2 align-items-center">
            <a asp-page="/Batches/Create" asp-route-cloneFromBatchId="@Model.Batch.Id" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-files me-1"></i> Clone Batch
            </a>
            @{
                var status = Model.Batch.Status?.ToLower() ?? "";
                var canCancel = status == "queued" || status == "running";
                var isCompleted = status == "completed" || status == "failed";
                var isCancelled = status == "cancelled";
            }
            @if (canCancel)
            {
                <form method="post" asp-page-handler="Cancel" asp-route-id="@Model.Batch.Id" onsubmit="return confirm('Are you sure you want to cancel this batch? This will stop all queued requests.');" class="mb-0">
                    <button type="submit" class="btn btn-danger btn-lg">
                        <i class="bi bi-x-circle me-1"></i> Cancel Batch
                    </button>
                </form>
            }
            else if (isCancelled)
            {
                <span class="badge bg-secondary fs-5">
                    <i class="bi bi-slash-circle me-1"></i> Batch Cancelled
                </span>
            }
            else if (isCompleted)
            {
                <span class="text-muted">
                    <i class="bi bi-info-circle me-1"></i> Batch @Model.Batch.Status (cannot cancel)
                </span>
            }
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            showInfoToast('@Html.Raw(Model.Message.Replace("'", "\\'"))');
        });
    </script>
}

<div class="row mb-4">
    <div class="col-md-6 mb-3">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Batch Summary</h5>
                <p><strong>User:</strong> @Model.Batch.UserId</p>
                <p>
                    <strong>Status:</strong>
                    @await Html.PartialAsync("Components/Ui/StatusBadge", Model.Batch.Status)
                </p>
                <p>
                    <strong>GPU Pool:</strong>
                    @await Html.PartialAsync("Components/Ui/GpuPoolBadge", Model.Batch.GpuPool)
                </p>
                <p>
                    <strong>Priority:</strong>
                    @await Html.PartialAsync("Components/Ui/PriorityBadge", Model.Batch.Priority)
                </p>
                <p>
                    <strong>Created:</strong> @Model.Batch.CreatedAt.Humanize()
                    <small class="text-muted ms-1">(@Model.Batch.CreatedAt.ToLocalTime())</small>
                </p>
                <p>
                    <strong>Started:</strong> @(Model.Batch.StartedAt?.Humanize() ?? "—")
                    @if (Model.Batch.StartedAt.HasValue)
                    {
                        <small class="text-muted ms-1">(@Model.Batch.StartedAt.Value.ToLocalTime())</small>
                    }
                </p>
                <p>
                    <strong>Completed:</strong> @(Model.Batch.CompletedAt?.Humanize() ?? "—")
                    @if (Model.Batch.CompletedAt.HasValue)
                    {
                        <small class="text-muted ms-1">(@Model.Batch.CompletedAt.Value.ToLocalTime())</small>
                    }
                </p>
                <p><strong>Completion window:</strong> @Model.Batch.CompletionWindow</p>
                <p>
                    <strong>SLA Deadline:</strong> @Model.Batch.DeadlineUtc.ToLocalTime()
                    @if (Model.Batch.IsSlaBreached)
                    {
                        <span class="badge bg-danger ms-2">SLA Breached</span>
                    }
                    else if (Model.Batch.CompletedAt.HasValue)
                    {
                        <span class="badge bg-success ms-2">SLA Met</span>
                    }
                    else
                    {
                        <span class="badge bg-warning ms-2">In progress</span>
                    }
                </p>
                @if (!string.IsNullOrEmpty(Model.Batch.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h6 class="alert-heading mb-2">
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>Batch Error
                                </h6>
                                <p class="mb-2" id="batch-error-text">@Model.Batch.ErrorMessage</p>
                            </div>
                            <button type="button" class="btn btn-sm btn-outline-light ms-2" onclick="copyToClipboard('@Html.Raw(Model.Batch.ErrorMessage.Replace("'", "\\'").Replace("\"", "&quot;"))', this)" title="Copy Error">
                                <i class="bi bi-clipboard"></i>
                            </button>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Requests Summary</h5>
                <ul class="list-unstyled mb-0">
                    <li><strong>Total:</strong> @Model.Batch.TotalRequests</li>
                    <li class="text-success"><strong>Completed:</strong> @Model.Batch.CompletedRequests</li>
                    <li class="text-danger"><strong>Failed:</strong> @Model.Batch.FailedRequests</li>
                    <li class="text-warning"><strong>Queued:</strong> @Model.Batch.QueuedRequests</li>
                    <li class="text-info"><strong>Running:</strong> @Model.Batch.RunningRequests</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<h2>Output</h2>
@if (!Model.Batch.HasOutputFile)
{
    <p class="text-muted">No output file has been generated for this batch yet.</p>
}
else
{
    <div class="card mb-3">
        <div class="card-body">
            <p class="mb-2">
                <strong>Output file:</strong>
                @Model.Batch.OutputFileId
            </p>
            @if (!string.IsNullOrEmpty(Model.OutputFileDownloadUrl))
            {
                <a href="@Model.OutputFileDownloadUrl" class="btn btn-sm btn-outline-primary" target="_blank" rel="noopener noreferrer">
                    Download output file
                </a>
            }
            @if (Model.Batch.OutputPreviewLines.Any())
            {
                <hr />
                <p class="fw-bold mb-1">Preview (first @Model.Batch.OutputPreviewLines.Count line(s)):</p>
                <pre class="bg-light p-2" style="max-height: 300px; overflow-y: auto;">
@foreach (var line in Model.Batch.OutputPreviewLines)
{
@line
@:
}
                </pre>
                @if (Model.Batch.OutputPreviewTruncated)
                {
                    <p class="text-muted mb-0">
                        Preview truncated – download the file to see the full content.
                    </p>
                }
            }
            else
            {
                <p class="text-muted mb-0">No preview available yet.</p>
            }
        </div>
    </div>
}

<h2>Interruption / Notes</h2>
@if (!Model.Batch.InterruptionNotes.Any())
{
    <p class="text-muted">No interruptions or escalations recorded for this batch.</p>
}
else
{
    <div class="card border-warning mb-4">
        <div class="card-body">
            <ul class="mb-0">
                @foreach (var note in Model.Batch.InterruptionNotes)
                {
                    <li>
                        <span class="badge bg-warning text-dark me-2">Line @note.LineNumber</span>
                        @note.Message
                    </li>
                }
            </ul>
        </div>
    </div>
}

<h2>Requests</h2>
@if (!Model.Batch.Requests.Any() && string.IsNullOrEmpty(Model.RequestStatus))
{
    <p class="text-muted">No requests associated with this batch.</p>
}
else
{
    <div class="mb-3">
        <div class="btn-group" role="group" aria-label="Request status filters">
            @{
                var statusOptions = new[] { "All", "Queued", "Running", "Completed", "Failed", "Cancelled" };
                var currentStatus = Model.RequestStatus ?? "All";
            }
            @foreach (var statusOption in statusOptions)
            {
                var count = Model.RequestStatusCounts.GetValueOrDefault(statusOption, 0);
                var isActive = string.Equals(currentStatus, statusOption, StringComparison.OrdinalIgnoreCase);
                <a asp-page="/Batches/Details" 
                   asp-route-id="@Model.Batch.Id" 
                   asp-route-requestStatus="@(statusOption == "All" ? null : statusOption)"
                   asp-route-requestPage="1"
                   class="btn btn-sm @(isActive ? "btn-primary" : "btn-outline-primary")">
                    @statusOption @(count > 0 ? $"({count})" : "")
                </a>
            }
        </div>
    </div>
    
    @if (!Model.Batch.Requests.Any())
    {
        <p class="text-muted">No requests match the selected filter.</p>
    }
    else
    {
    <div class="table-responsive">
        <table id="request-table" class="table table-sm table-striped align-middle">
            <thead>
                <tr>
                    <th>Line</th>
                    <th>Status</th>
                    <th>Duration</th>
                    <th>GPU Pool</th>
                    <th>Retry Count</th>
                    <th>Completed</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var request in Model.Batch.Requests)
            {
                var collapseId = $"req-{request.Id}";
                <tr>
                    <td class="text-monospace">@request.LineNumber</td>
                    <td>@await Html.PartialAsync("Components/Ui/StatusBadge", request.Status)</td>
                    <td>@request.DurationDisplay</td>
                    <td>
                        @await Html.PartialAsync("Components/Ui/GpuPoolBadge", request.GpuPool)
                        @if (request.WasEscalated)
                        {
                            <span class="badge bg-warning text-dark ms-1">Escalated</span>
                        }
                    </td>
                    <td>@request.RetryCount</td>
                    <td>@(request.CompletedAt?.Humanize() ?? "—")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                                Details
                            </button>
                            @if (request.Status == "Failed")
                            {
                                <form method="post" asp-page-handler="RetryRequest" 
                                      asp-route-id="@Model.Batch.Id" 
                                      asp-route-requestId="@request.Id"
                                      asp-route-requestStatus="@Model.RequestStatus"
                                      asp-route-requestPage="@Model.RequestPage"
                                      class="mb-0" 
                                      onsubmit="return confirm('Retry this failed request?');">
                                    <button type="submit" class="btn btn-sm btn-outline-warning" title="Retry Request">
                                        <i class="bi bi-arrow-clockwise me-1"></i> Retry
                                    </button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="7" class="p-0 border-0">
                        <div id="@collapseId" class="collapse" data-bs-parent="#request-table">
                            <div class="card card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="fw-bold mb-0">Input</h6>
                                        @if (!string.IsNullOrWhiteSpace(request.InputPayload))
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-secondary copy-json-btn" data-target-id="input-@request.Id">
                                                <i class="bi bi-clipboard me-1"></i> Copy
                                            </button>
                                        }
                                    </div>
                                    <pre class="bg-light p-2 mb-0"><code id="input-@request.Id" class="language-json">@(!string.IsNullOrWhiteSpace(request.InputPayload) ? request.InputPayload : "-")</code></pre>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="fw-bold mb-0">Output</h6>
                                        @if (!string.IsNullOrWhiteSpace(request.OutputPayload))
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-secondary copy-json-btn" data-target-id="output-@request.Id">
                                                <i class="bi bi-clipboard me-1"></i> Copy
                                            </button>
                                        }
                                    </div>
                                    <pre class="bg-light p-2 mb-0"><code id="output-@request.Id" class="language-json">@(!string.IsNullOrWhiteSpace(request.OutputPayload) ? request.OutputPayload : "-")</code></pre>
                                </div>
                            </div>
                            @if (!string.IsNullOrWhiteSpace(request.ErrorMessage))
                            {
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <div class="alert alert-danger mb-0">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="flex-grow-1">
                                                    <h6 class="alert-heading mb-2">
                                                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Request Error
                                                    </h6>
                                                    <p class="mb-0" id="request-error-@request.Id">@request.ErrorMessage</p>
                                                </div>
                                                <button type="button" class="btn btn-sm btn-outline-light ms-2" onclick="copyToClipboard('@Html.Raw(request.ErrorMessage.Replace("'", "\\'").Replace("\"", "&quot;"))', this)" title="Copy Error">
                                                    <i class="bi bi-clipboard"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="row mb-3">
                                <div class="col-12">
                                    <h6 class="fw-bold mb-2">Timeline</h6>
                                    <div class="request-timeline">
                                        @{
                                            var createdTime = request.CreatedAt;
                                            var startedTime = request.StartedAt;
                                            var completedTime = request.CompletedAt;
                                            var now = DateTimeOffset.UtcNow;
                                        }
                                        <div class="timeline-item @(startedTime.HasValue ? "completed" : "pending")">
                                            <div class="timeline-marker"></div>
                                            <div class="timeline-content">
                                                <strong>Created</strong>
                                                <div class="text-muted small">@createdTime.Humanize()</div>
                                                <div class="text-muted small">@createdTime.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</div>
                                            </div>
                                        </div>
                                        @if (startedTime.HasValue)
                                        {
                                            var queuedDuration = startedTime.Value - createdTime;
                                            <div class="timeline-connector">
                                                <div class="timeline-duration">
                                                    <i class="bi bi-clock me-1"></i>Queued: @queuedDuration.Humanize()
                                                </div>
                                            </div>
                                            <div class="timeline-item @(completedTime.HasValue ? "completed" : (request.Status == "Running" ? "active" : "pending"))">
                                                <div class="timeline-marker"></div>
                                                <div class="timeline-content">
                                                    <strong>Started</strong>
                                                    <div class="text-muted small">@startedTime.Value.Humanize()</div>
                                                    <div class="text-muted small">@startedTime.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</div>
                                                </div>
                                            </div>
                                        }
                                        @if (completedTime.HasValue && startedTime.HasValue)
                                        {
                                            var runningDuration = completedTime.Value - startedTime.Value;
                                            <div class="timeline-connector">
                                                <div class="timeline-duration">
                                                    <i class="bi bi-clock me-1"></i>Running: @runningDuration.Humanize()
                                                </div>
                                            </div>
                                            <div class="timeline-item completed @(request.Status == "Failed" ? "failed" : "")">
                                                <div class="timeline-marker"></div>
                                                <div class="timeline-content">
                                                    <strong>Completed</strong>
                                                    <div class="text-muted small">@completedTime.Value.Humanize()</div>
                                                    <div class="text-muted small">@completedTime.Value.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</div>
                                                </div>
                                            </div>
                                        }
                                        else if (startedTime.HasValue && request.Status == "Running")
                                        {
                                            var runningDuration = now - startedTime.Value;
                                            <div class="timeline-connector">
                                                <div class="timeline-duration">
                                                    <i class="bi bi-clock me-1"></i>Running: @runningDuration.Humanize() (in progress)
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="fw-bold">Notes</h6>
                                    <p class="mb-1">@(!string.IsNullOrWhiteSpace(request.Notes) ? request.Notes : "—")</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="fw-bold">Escalation History</h6>
                                    @if (!request.GpuPoolHistory.Any())
                                    {
                                        <p class="text-muted mb-0">No history recorded.</p>
                                    }
                                    else
                                    {
                                        <ul class="mb-0">
                                            @foreach (var history in request.GpuPoolHistory)
                                            {
                                                <li>
                                                    <span class="text-monospace">@history.Pool</span> – @history.Description
                                                    @if (history.OccurredAt.HasValue)
                                                    {
                                                        <span class="text-muted">(@history.OccurredAt.Value.Humanize())</span>
                                                    }
                                                </li>
                                            }
                                        </ul>
                                    }
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    @if (Model.TotalRequestPages > 1)
    {
        <nav aria-label="Request pagination" class="mt-3">
            <ul class="pagination justify-content-center">
                <li class="page-item @(!Model.HasPreviousRequestPage ? "disabled" : "")">
                    <a class="page-link" asp-page="/Batches/Details"
                       asp-route-id="@Model.Batch.Id"
                       asp-route-requestPage="@(Model.RequestPage - 1)"
                       asp-route-requestPageSize="@Model.RequestPageSize">
                        Previous
                    </a>
                </li>

                @{
                    var startPage = Math.Max(1, Model.RequestPage - 2);
                    var endPage = Math.Min(Model.TotalRequestPages, Model.RequestPage + 2);
                }

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="/Batches/Details"
                           asp-route-id="@Model.Batch.Id"
                           asp-route-requestPage="1"
                           asp-route-requestPageSize="@Model.RequestPageSize">
                            1
                        </a>
                    </li>
                    @if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                @for (var i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.RequestPage ? "active" : "")">
                        <a class="page-link" asp-page="/Batches/Details"
                           asp-route-id="@Model.Batch.Id"
                           asp-route-requestPage="@i"
                           asp-route-requestPageSize="@Model.RequestPageSize"
                           asp-route-requestStatus="@Model.RequestStatus">
                            @i
                        </a>
                    </li>
                }

                @if (endPage < Model.TotalRequestPages)
                {
                    @if (endPage < Model.TotalRequestPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link" asp-page="/Batches/Details"
                           asp-route-id="@Model.Batch.Id"
                           asp-route-requestPage="@Model.TotalRequestPages"
                           asp-route-requestPageSize="@Model.RequestPageSize">
                            @Model.TotalRequestPages
                        </a>
                    </li>
                }

                <li class="page-item @(!Model.HasNextRequestPage ? "disabled" : "")">
                    <a class="page-link" asp-page="/Batches/Details"
                       asp-route-id="@Model.Batch.Id"
                       asp-route-requestPage="@(Model.RequestPage + 1)"
                       asp-route-requestPageSize="@Model.RequestPageSize">
                        Next
                    </a>
                </li>
            </ul>
        </nav>

        <p class="text-center text-muted">
            Showing requests @((Model.RequestPage - 1) * Model.RequestPageSize + 1) to @Math.Min(Model.RequestPage * Model.RequestPageSize, Model.Batch.TotalRequests) of @Model.Batch.TotalRequests
        </p>
    }
    }
}

@section Scripts {
    <script>
        function copyToClipboard(text, button) {
            navigator.clipboard.writeText(text).then(function() {
                // Change icon to check mark
                const icon = button.querySelector('i');
                const originalClass = icon.className;
                icon.className = 'bi bi-check2';
                button.classList.remove('btn-outline-secondary');
                button.classList.add('btn-success');
                
                // Reset after 2 seconds
                setTimeout(function() {
                    icon.className = originalClass;
                    button.classList.remove('btn-success');
                    button.classList.add('btn-outline-secondary');
                }, 2000);
            }).catch(function(err) {
                console.error('Failed to copy: ', err);
                alert('Failed to copy to clipboard');
            });
        }

        // Initialize Bootstrap tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });

        // Auto-refresh functionality
        (function() {
            const toggle = document.getElementById('auto-refresh-toggle');
            const lastUpdated = document.getElementById('last-updated');
            let refreshInterval = null;
            
            if (!toggle) return;
            
            function updateLastUpdated() {
                const now = new Date();
                lastUpdated.textContent = 'Last updated: ' + now.toLocaleTimeString();
                lastUpdated.style.display = 'inline';
            }
            
            function refreshPage() {
                // Preserve all query parameters including requestStatus and pagination
                const url = new URL(window.location.href);
                url.searchParams.set('_', Date.now()); // Add timestamp to prevent caching
                window.location.href = url.toString();
            }
            
            toggle.addEventListener('change', function() {
                if (this.checked) {
                    updateLastUpdated();
                    refreshInterval = setInterval(function() {
                        refreshPage();
                    }, 5000); // Refresh every 5 seconds
                } else {
                    if (refreshInterval) {
                        clearInterval(refreshInterval);
                        refreshInterval = null;
                    }
                    lastUpdated.style.display = 'none';
                }
            });
            
            // Auto-enable if batch is in progress
            @if (Model.Batch.Status == "Queued" || Model.Batch.Status == "Running")
            {
                <text>
                toggle.checked = true;
                toggle.dispatchEvent(new Event('change'));
                </text>
            }
        })();

        // Copy JSON buttons
        document.querySelectorAll('.copy-json-btn').forEach(function(btn) {
            btn.addEventListener('click', function() {
                const targetId = this.getAttribute('data-target-id');
                const codeElement = document.getElementById(targetId);
                if (codeElement) {
                    const text = codeElement.textContent || codeElement.innerText;
                    copyToClipboard(text, this);
                }
            });
        });

        // Trigger Prism highlighting after page load
        if (typeof Prism !== 'undefined') {
            Prism.highlightAll();
        }
    </script>
}
