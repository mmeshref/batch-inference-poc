@page
@model BatchPortal.Pages.Batches.IndexModel
@{
    ViewData["Title"] = "Batches";
    ViewData["Breadcrumbs"] = new List<(string, string?)>
    {
        ("Batches", null)
    };
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Batches</h1>
    <div class="d-flex align-items-center gap-2">
        <span id="last-updated" class="text-muted small" style="display: none;"></span>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="auto-refresh-toggle" 
                   @(Model.Batches.Any(b => b.Status == "Queued" || b.Status == "Running") ? "" : "disabled")>
            <label class="form-check-label" for="auto-refresh-toggle">
                <i class="bi bi-arrow-clockwise me-1"></i>Auto-refresh
            </label>
        </div>
    </div>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-3">
        <label asp-for="Status" class="form-label">Status</label>
        <select asp-for="Status" class="form-select">
            @foreach (var s in Model.StatusOptions)
            {
                var count = Model.StatusCounts.GetValueOrDefault(s, 0);
                <option value="@s" selected="@(string.Equals(Model.Status ?? "All", s, StringComparison.OrdinalIgnoreCase) ? "selected" : null)">
                    @s @(count > 0 ? $"({count})" : "")
                </option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <label asp-for="Pool" class="form-label">GPU Pool</label>
        <select asp-for="Pool" class="form-select">
            @foreach (var p in Model.PoolOptions)
            {
                var count = Model.PoolCounts.GetValueOrDefault(p, 0);
                <option value="@p" selected="@(string.Equals(Model.Pool ?? "All", p, StringComparison.OrdinalIgnoreCase) ? "selected" : null)">
                    @p @(count > 0 ? $"({count})" : "")
                </option>
            }
        </select>
    </div>
    <div class="col-md-4">
        <label asp-for="Search" class="form-label">Search (user or batch id)</label>
        <input asp-for="Search" class="form-control" />
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button type="submit" class="btn btn-primary w-100">Apply</button>
    </div>
</form>

@functions {
    string SortUrl(string column)
    {
        var currentSortBy = (Model.SortBy ?? "created").ToLowerInvariant();
        var currentSortDir = (Model.SortDir ?? "desc").ToLowerInvariant();
        var nextDir = "asc";
        if (string.Equals(currentSortBy, column, StringComparison.OrdinalIgnoreCase))
        {
            nextDir = currentSortDir == "asc" ? "desc" : "asc";
        }

        var query = new Dictionary<string, string?>
        {
            ["Status"] = Model.Status,
            ["Pool"] = Model.Pool,
            ["Search"] = Model.Search,
            ["SortBy"] = column,
            ["SortDir"] = nextDir
        };

        var qs = QueryString.Empty;
        foreach (var kvp in query)
        {
            if (!string.IsNullOrEmpty(kvp.Value))
            {
                qs = qs.Add(kvp.Key, kvp.Value);
            }
        }

        return $"{Request.Path}{qs}";
    }
}

@if (!Model.Batches.Any())
{
    <div class="empty-state text-center py-5">
        <i class="bi bi-inbox display-1 text-muted mb-3"></i>
        <h3 class="text-muted">No batches found</h3>
        <p class="text-muted mb-4">Try adjusting your filters or create a new batch.</p>
    </div>
}
else
{
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th><a href="@SortUrl("created")">Created</a></th>
                <th><a href="@SortUrl("user")">User</a></th>
                <th><a href="@SortUrl("status")">Status</a></th>
                <th><a href="@SortUrl("gpupool")">GPU Pool</a></th>
                <th>Priority</th>
                <th>Progress</th>
                <th><a href="@SortUrl("completed")">Completed At</a></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var batch in Model.Batches)
        {
            var totalRequests = batch.TotalRequests > 0 ? batch.TotalRequests : 1;
            var completedRequests = batch.CompletedRequests;
            var progressPercent = (int)((completedRequests / (double)totalRequests) * 100);
            
            <tr>
                <td>@batch.CreatedAt.Humanize()</td>
                <td>@batch.UserId</td>
                <td>
                    @{
                        var statusIcon = batch.Status switch {
                            "Queued" => "pause-circle",
                            "Running" => "play-circle-fill",
                            "Completed" => "check-circle-fill",
                            "Failed" => "x-circle-fill",
                            "Cancelled" => "slash-circle",
                            "DeadLettered" => "exclamation-triangle-fill",
                            _ => null
                        };
                    }
                    @if (statusIcon != null)
                    {
                        <i class="bi bi-@statusIcon me-1"></i>
                    }
                    @await Html.PartialAsync("Components/Ui/StatusBadge", batch.Status)
                </td>
                <td>@await Html.PartialAsync("Components/Ui/GpuPoolBadge", batch.GpuPool)</td>
                <td>@await Html.PartialAsync("Components/Ui/PriorityBadge", batch.Priority)</td>
                <td style="min-width: 180px;">
                    <div class="progress" style="height: 22px;">
                        <div class="progress-bar @(progressPercent == 100 ? "bg-success" : batch.FailedRequests > 0 ? "bg-warning" : "")" 
                             role="progressbar" 
                             style="width: @progressPercent%" 
                             aria-valuenow="@progressPercent" 
                             aria-valuemin="0" 
                             aria-valuemax="100">
                            <small class="fw-bold">@completedRequests/@totalRequests</small>
                        </div>
                    </div>
                    @if (batch.FailedRequests > 0)
                    {
                        <small class="text-danger ms-1">@batch.FailedRequests failed</small>
                    }
                </td>
                <td>@(batch.CompletedAt?.Humanize() ?? "â€”")</td>
                <td>
                    @{
                        var batchStatus = (batch.Status ?? "").ToLowerInvariant();
                        var canCancelBatch = batchStatus == "queued" || batchStatus == "running";
                    }
                    <div class="d-flex gap-1">
                        <a asp-page="/Batches/Details" asp-route-id="@batch.Id" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-arrow-right-circle me-1"></i> View
                        </a>
                        @if (canCancelBatch)
                        {
                            <form method="post" asp-page-handler="Cancel" asp-route-id="@batch.Id" style="display: contents;" onsubmit="return confirm('Cancel this batch? All queued requests will be stopped.');">
                                <button type="submit" class="btn btn-sm btn-danger" title="Cancel Batch">
                                    <i class="bi bi-x-circle me-1"></i> Cancel
                                </button>
                            </form>
                        }
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>

    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Batch list pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link" asp-page="/Batches/Index"
                       asp-route-currentPage="@(Model.CurrentPage - 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-status="@Model.Status"
                       asp-route-pool="@Model.Pool"
                       asp-route-search="@Model.Search"
                       asp-route-sortBy="@Model.SortBy"
                       asp-route-sortDir="@Model.SortDir">
                        Previous
                    </a>
                </li>

                @{
                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                    var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                }

                @if (startPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="/Batches/Index"
                           asp-route-currentPage="1"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-status="@Model.Status"
                           asp-route-pool="@Model.Pool"
                           asp-route-search="@Model.Search"
                           asp-route-sortBy="@Model.SortBy"
                           asp-route-sortDir="@Model.SortDir">
                            1
                        </a>
                    </li>
                    @if (startPage > 2)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                }

                @for (var i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" asp-page="/Batches/Index"
                           asp-route-currentPage="@i"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-status="@Model.Status"
                           asp-route-pool="@Model.Pool"
                           asp-route-search="@Model.Search"
                           asp-route-sortBy="@Model.SortBy"
                           asp-route-sortDir="@Model.SortDir">
                            @i
                        </a>
                    </li>
                }

                @if (endPage < Model.TotalPages)
                {
                    @if (endPage < Model.TotalPages - 1)
                    {
                        <li class="page-item disabled"><span class="page-link">...</span></li>
                    }
                    <li class="page-item">
                        <a class="page-link" asp-page="/Batches/Index"
                           asp-route-currentPage="@Model.TotalPages"
                           asp-route-pageSize="@Model.PageSize"
                           asp-route-status="@Model.Status"
                           asp-route-pool="@Model.Pool"
                           asp-route-search="@Model.Search"
                           asp-route-sortBy="@Model.SortBy"
                           asp-route-sortDir="@Model.SortDir">
                            @Model.TotalPages
                        </a>
                    </li>
                }

                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                    <a class="page-link" asp-page="/Batches/Index"
                       asp-route-currentPage="@(Model.CurrentPage + 1)"
                       asp-route-pageSize="@Model.PageSize"
                       asp-route-status="@Model.Status"
                       asp-route-pool="@Model.Pool"
                       asp-route-search="@Model.Search"
                       asp-route-sortBy="@Model.SortBy"
                       asp-route-sortDir="@Model.SortDir">
                        Next
                    </a>
                </li>
            </ul>
        </nav>

        <p class="text-center text-muted">
            Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) of @Model.TotalCount batches
        </p>
    }
}

@section Scripts {
    <script>
        (function() {
            const toggle = document.getElementById('auto-refresh-toggle');
            const lastUpdated = document.getElementById('last-updated');
            let refreshInterval = null;
            
            function updateLastUpdated() {
                const now = new Date();
                lastUpdated.textContent = 'Last updated: ' + now.toLocaleTimeString();
                lastUpdated.style.display = 'inline';
            }
            
            function refreshPage() {
                // Preserve all query parameters
                const url = new URL(window.location.href);
                url.searchParams.set('_', Date.now()); // Add timestamp to prevent caching
                window.location.href = url.toString();
            }
            
            toggle.addEventListener('change', function() {
                if (this.checked) {
                    updateLastUpdated();
                    refreshInterval = setInterval(function() {
                        refreshPage();
                    }, 5000); // Refresh every 5 seconds
                } else {
                    if (refreshInterval) {
                        clearInterval(refreshInterval);
                        refreshInterval = null;
                    }
                    lastUpdated.style.display = 'none';
                }
            });
            
            // Auto-enable if there are in-progress batches
            @if (Model.Batches.Any(b => b.Status == "Queued" || b.Status == "Running"))
            {
                <text>
                toggle.checked = true;
                toggle.dispatchEvent(new Event('change'));
                </text>
            }
        })();
    </script>
}

